{
    "openapi": "3.0.0",
    "info": {
        "version": "1.0",
        "title": "Weather Station",
        "description": "Weather Station project for ES - FEUP"
    },
    "servers": [
        {
            "url": "http://127.0.0.1",
            "description": "Localhost"
        }
    ],
    "paths": {
        "/stations": {
            "get": {
                "summary": "Returns all weather stations",
                "responses": {
                    "200": {
                        "description": "List of stations",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Station"
                                    }
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Unexpected error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/stations/{stationId}": {
            "get": {
                "summary": "Get station information",
                "parameters": [
                    {
                        "name": "stationId",
                        "in": "path",
                        "description": "ID of the station",
                        "required": true,
                        "schema": {
                            "$ref": "#/components/schemas/StationId"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Station information",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Station"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Station not found"
                    },
                    "500": {
                        "description": "Unexpected error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "summary": "Creates a new weather station",
                "parameters": [
                    {
                        "name": "stationId",
                        "in": "path",
                        "description": "ID of the station",
                        "required": true,
                        "schema": {
                            "$ref": "#/components/schemas/StationId"
                        }
                    }
                ],
                "requestBody": {
                    "description": "The new weather station",
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Station"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Success"
                    },
                    "409": {
                        "description": "Station ID conflicts with an existing station"
                    },
                    "500": {
                        "description": "Unexpected error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                }
                            }
                        }
                    }
                }
            },
            "put": {
                "summary": "Update a weather station",
                "parameters": [
                    {
                        "name": "stationId",
                        "in": "path",
                        "description": "ID of the station",
                        "required": true,
                        "schema": {
                            "$ref": "#/components/schemas/StationId"
                        }
                    }
                ],
                "requestBody": {
                    "description": "The new station information",
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Station"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success"
                    },
                    "500": {
                        "description": "Unexpected error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/stations/{stationId}/readings/": {
            "get": {
                "summary": "Get weather readings",
                "parameters": [
                    {
                        "name": "stationId",
                        "in": "path",
                        "description": "ID of the station",
                        "required": true,
                        "schema": {
                            "$ref": "#/components/schemas/StationId"
                        }
                    },
                    {
                        "name": "from",
                        "in": "query",
                        "description": "Filter results to readings after this timestamp",
                        "schema": {
                            "$ref": "#/components/schemas/TimeStamp"
                        }
                    },
                    {
                        "name": "to",
                        "in": "query",
                        "description": "Filter results for readings before this timestamp",
                        "schema": {
                            "$ref": "#/components/schemas/TimeStamp"
                        }
                    },
                    {
                        "name": "average",
                        "in": "query",
                        "description": "Return averages of the readings",
                        "schema": {
                            "type": "boolean",
                            "default": false
                        }
                    },
                    {
                        "name": "limit",
                        "in": "query",
                        "description": "Maximum amount of returned readings",
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "List of readings",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Reading"
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Station not found"
                    },
                    "500": {
                        "description": "Unexpected error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "summary": "Save a weather reading",
                "parameters": [
                    {
                        "name": "stationId",
                        "in": "path",
                        "description": "ID of the station",
                        "required": true,
                        "schema": {
                            "$ref": "#/components/schemas/StationId"
                        }
                    }
                ],
                "requestBody": {
                    "description": "The reading to save",
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Reading"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Success"
                    },
                    "404": {
                        "description": "Station not found"
                    },
                    "500": {
                        "description": "Unexpected error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "StationId": {
                "type": "integer"
            },
            "TimeStamp": {
                "type": "string",
                "format": "date-time"
            },
            "Station": {
                "type": "object",
                "required": [
                    "id",
                    "name"
                ],
                "properties": {
                    "id": {
                        "$ref": "#/components/schemas/StationId"
                    },
                    "name": {
                        "type": "string"
                    }
                }
            },
            "Reading": {
                "type": "object",
                "required": [
                    "wind",
                    "humidity",
                    "temperature",
                    "timestamp"
                ],
                "properties": {
                    "wind": {
                        "type": "number"
                    },
                    "humidity": {
                        "type": "number"
                    },
                    "temperature": {
                        "type": "number"
                    },
                    "timestamp": {
                        "$ref": "#/components/schemas/TimeStamp"
                    }
                }
            },
            "Error": {
                "type": "object",
                "required": [
                    "message"
                ],
                "properties": {
                    "message": {
                        "description": "A human readable error message",
                        "type": "string"
                    }
                }
            }
        },
        "securitySchemes": {
            "ApiKey": {
                "type": "apiKey",
                "in": "header",
                "name": "X-Api-Key"
            }
        }
    },
    "security": [
        {
            "ApiKey": []
        }
    ]
}
